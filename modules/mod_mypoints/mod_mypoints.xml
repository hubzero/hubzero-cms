<install type="module" version="1.5.0">
	<name>My Points</name>
	<author>HUBzero</author>
	<creationDate>October 2009</creationDate>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>zooley@purdue.edu</authorEmail>
	<version>1</version>
	<description>This module will display a point total and list of most recent point transactions.</description>
	<files>
		<filename module="mod_mypoints">mod_mypoints.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>mod_mypoints.css</filename>
	</files>
	<params>
		<param name="moduleclass" type="text" default="" label="Module class" description="A CSS class to be applied to the module, this allows individual module styling" />
		<param name="limit" type="text" default="5" label="# to display" description="The number of items to display." />
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass" type="text" default="" label="Module class" description="A CSS class to be applied to the module, this allows individual module styling" />
				<field name="limit" type="text" default="5" label="# to display" description="The number of items to display." />
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_mypoints.ini</language>
	</languages>
</install>

