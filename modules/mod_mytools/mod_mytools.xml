<install type="module" version="1.5">
	<name>My Tools</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>This module shows a list of the user's favorite tools, recently used tools, and all available tools.</description>
	<files>
		<filename module="mod_mytools">mod_mytools.php</filename>
		<filename>mod_mytools.css</filename>
		<filename>mod_mytools.js</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>images/app_go.gif</filename>
		<filename>images/fav_star.gif</filename>
		<filename>images/star.png</filename>
		<filename>images/fav_heart.gif</filename>
		<filename>images/heart.png</filename>
	</files>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module class suffix" description="A CSS class to be applied to the module container, this allows individual module styling" />
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module class suffix" description="A CSS class to be applied to the module container, this allows individual module styling" />
			</fieldset>
		</fields>
	</config>
</install>

