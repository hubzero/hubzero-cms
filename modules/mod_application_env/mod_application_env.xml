<install type="module" version="1.5.0">
	<name>Application Environment</name>
	<author>HUBzero</author>
	<creationDate>April 2012</creationDate>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>zooley@purdue.edu</authorEmail>
	<version>1.5.0</version>
	<description>This module displays the current application environment (production, stage, testing, development)</description>
	<files>
		<filename module="mod_application_env">mod_application_env.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>index.html</filename>
		<filename>mod_application_env.css</filename>
	</files>
	<params>
		<param name="moduleid" type="text" default="" label="Module ID" description="An ID to be applied to the css of the module container, this allows individual module styling" />
		<param name="message" type="textarea" rows="5" cols="40" default="" label="Message" description="The message to be displayed" />
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleid" type="text" default="" label="Module ID" description="An ID to be applied to the css of the module container, this allows individual module styling" />
				<field name="message" type="textarea" rows="5" cols="40" default="" label="Message" description="The message to be displayed" />
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_application_env.ini</language>
	</languages>
</install>