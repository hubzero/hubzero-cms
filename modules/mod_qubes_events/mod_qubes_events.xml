<extension version="1.5.0" client="site" type="module">
	<name>QUBES events</name>
	<author>HUBzero</author>
	<creationDate>July 2015</creationDate>
	<version>1.0</version>
	<description>Display special events on the home page</description>
	<files>
		<filename module="mod_billboards">mod_ubes_events.php</filename>
		<filename>mod_ubes_events.css</filename>
		<filename>helper.php</filename>
		<filename>mod_ubes_events.xml</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="limit" type="text" default="5" label="Limit" description="How many items should be displayed. 0 for all." />
			</fieldset>
		</fields>
	</config>
</extension>