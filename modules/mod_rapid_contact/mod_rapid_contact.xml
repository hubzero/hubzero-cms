<extension version="1.5.0" client="site" type="module">
	<name>Rapid Contact</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>MOD_RAPID_CONTACT_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_rapid_contact">mod_rapid_contact.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>assets/css/mod_rapid_contact.css</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="name_label" type="text" default="Name:" label="MOD_RAPID_CONTACT_PARAM_NAMELABEL_LABEL" description="MOD_RAPID_CONTACT_PARAM_NAMELABEL_DESC" />
				<field name="email_label" type="text" default="Email:" label="MOD_RAPID_CONTACT_PARAM_EMAILLABEL_LABEL" description="MOD_RAPID_CONTACT_PARAM_EMAILLABEL_DESC" />
				<field name="subject_label" type="text" default="Subject:" label="MOD_RAPID_CONTACT_PARAM_SUBJECTLABEL_LABEL" description="MOD_RAPID_CONTACT_PARAM_SUBJECTLABEL_DESC" />
				<field name="message_label" type="text" default="Message:" label="MOD_RAPID_CONTACT_PARAM_MESSAGELABEL_LABEL" description="MOD_RAPID_CONTACT_PARAM_MESSAGELABEL_DESC" />
				<field name="email_recipient" type="text" default="" label="MOD_RAPID_CONTACT_PARAM_EMAILRECIPIENT_LABEL" description="MOD_RAPID_CONTACT_PARAM_EMAILRECIPIENT_DESC" />
				<field name="button_text" type="text" default="Send Message" label="MOD_RAPID_CONTACT_PARAM_BUTTONTEXT_LABEL" description="MOD_RAPID_CONTACT_PARAM_BUTTONTEXT_DESC" />
				<field name="page_text" type="text" default="Thank you for your contact." label="MOD_RAPID_CONTACT_PARAM_PAGETEXT_LABEL" description="MOD_RAPID_CONTACT_PARAM_PAGETEXT_DESC" />
				<field name="error_text" type="text" default="Your message could not be sent. Please try again." label="MOD_RAPID_CONTACT_PARAM_ERRORTEXT_LABEL" description="MOD_RAPID_CONTACT_PARAM_ERRORTEXT_DESC" />
				<field name="no_email" type="text" default="Please write your email" label="MOD_RAPID_CONTACT_PARAM_NOEMAIL_LABEL" description="MOD_RAPID_CONTACT_PARAM_NOEMAIL_DESC" />
				<field name="invalid_email" type="text" default="Please write a valid email" label="MOD_RAPID_CONTACT_PARAM_INVALIDEMAIL_LABEL" description="MOD_RAPID_CONTACT_PARAM_INVALIDEMAIL_DESC" />
				<field name="from_name" type="text" default="Rapid Contact" label="MOD_RAPID_CONTACT_PARAM_FROMNAME_LABEL" description="MOD_RAPID_CONTACT_PARAM_FROMNAME_DESC" />
				<field name="from_email" type="text" default="rapid_contact@yoursite.com" label="MOD_RAPID_CONTACT_PARAM_FROMEMAIL_LABEL" description="MOD_RAPID_CONTACT_PARAM_FROMEMAIL_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="exact_url" type="radio" default="1" label="MOD_RAPID_CONTACT_PARAM_EXACTURL_LABEL" description="MOD_RAPID_CONTACT_PARAM_EXACTURL_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="disable_https" type="radio" default="0" label="MOD_RAPID_CONTACT_PARAM_DISABLEHTTPS_LABEL" description="MOD_RAPID_CONTACT_PARAM_DISABLEHTTPS_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="pre_text" type="text" default="" label="MOD_RAPID_CONTACT_PARAM_PRETEXT_LABEL" description="MOD_RAPID_CONTACT_PARAM_PRETEXT_DESC" />
				<field name="fixed_url" type="radio" default="0" label="MOD_RAPID_CONTACT_PARAM_FIXEDURL_LABEL" description="MOD_RAPID_CONTACT_PARAM_FIXEDURL_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="fixed_url_address" type="text" default="" label="MOD_RAPID_CONTACT_PARAM_FIXEDURLADDRESS_LABEL" description="MOD_RAPID_CONTACT_PARAM_FIXEDURLADDRESS_DESC" />
				<field name="enable_anti_spam" type="radio" default="1" label="MOD_RAPID_CONTACT_PARAM_ENABLEANTISPAM_LABEL" description="MOD_RAPID_CONTACT_PARAM_ENABLEANTISPAM_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="anti_spam_q" type="text" default="How many eyes has a typical person?" label="MOD_RAPID_CONTACT_PARAM_ANTISPAMQ_LABEL" description="MOD_RAPID_CONTACT_PARAM_ANTISPAMQ_DESC" />
				<field name="anti_spam_a" type="text" default="2" label="MOD_RAPID_CONTACT_PARAM_ANTISPAMA_LABEL" description="MOD_RAPID_CONTACT_PARAM_ANTISPAMA_DESC" />
				<field name="moduleclass_sfx" type="text" default="" label="MOD_RAPID_CONTACT_PARAM_MODULECLASS_LABEL" description="MOD_RAPID_CONTACT_PARAM_MODULECLASS_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
