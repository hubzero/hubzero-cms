<install type="component" version="1.5">
	<name>Contribtool</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Manage tool contribution process</description>
	<files>
		<filename>contribtool.html.php</filename>
		<filename>contribtool.php</filename>
		<filename>controller.php</filename>
		<filename>contribtool.css</filename>
		<filename>contribtool.js</filename>
		<filename>router.php</filename>
		<filename>index.html</filename>
		<filename>images/ajax-loader.gif</filename>
		<filename>images/alltools.gif</filename>
		<filename>images/arrow-up.gif</filename>
		<filename>images/bgdev.gif</filename>
		<filename>images/check.gif</filename>
		<filename>images/closedsource.gif</filename>
		<filename>images/create_project.gif</filename>
		<filename>images/delete.gif</filename>
		<filename>images/edit.png</filename>
		<filename>images/fc-arrow.gif</filename>
		<filename>images/high_priority.gif</filename>
		<filename>images/history.gif</filename>
		<filename>images/install_tool.gif</filename>
		<filename>images/message.gif</filename>
		<filename>images/minus.gif</filename>
		<filename>images/opensource.gif</filename>
		<filename>images/order_down.gif</filename>
		<filename>images/order_up.gif</filename>
		<filename>images/publish_tool.gif</filename>
		<filename>images/reorder.gif</filename>
		<filename>images/retire.gif</filename>
		<filename>images/showcontrols.gif</filename>
		<filename>images/sourcecode.gif</filename>
		<filename>images/timeline.gif</filename>
		<filename>images/high_priority.gif</filename>
		<filename>images/wiki.gif</filename>
		<filename>images/bullets/task_complete.gif</filename>
		<filename>images/bullets/task_incomplete.gif</filename>
		<filename>images/bullets/orangepointer.gif</filename>
		<filename>images/bullets/greypointer.gif</filename>
		<filename>images/bullets/arrow.png</filename>
		<filename>images/qanda.gif</filename>
		<filename>images/trash.gif</filename>
		<filename>images/warning.gif</filename>
		<filename>images/wishlist.gif</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.com_contribtool.ini</language>
	</languages>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
	</uninstall>

	<administration>
		<menu>Tools</menu>
		<files>
			<filename>admin.contribtool.html.php</filename>
			<filename>admin.contribtool.php</filename>
			<filename>admin.controller.php</filename>
			<filename>config.xml</filename>
			<filename>contribtool.author.php</filename>
			<filename>contribtool.config.php</filename>
			<filename>contribtool.helper.php</filename>
		        <filename>contribtool.license.php</filename>
			<filename>contribtool.tool.php</filename>
			<filename>contribtool.toolgroup.php</filename>
			<filename>contribtool.version.php</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>toolbar.contribtool.html.php</filename>
			<filename>toolbar.contribtool.php</filename>
		</files>
	</administration>
	<params>
		<param name="contribtool_on" type="radio" default="0" label="Contribtool" description="Indicate whether the component is active or not">
			<option value="0">OFF</option>
			<option value="1">ON</option>
		</param>
		<param name="admingroup" type="text" menu="hide" default="apps" label="Admin group" description="Name of contribtool admin group" />
		<param name="default_mw" type="text" menu="hide" default="narwhal" label="Default middleware" description="Name of default middleware" />
		<param name="default_vnc" type="text" menu="hide" default="780x600" label="Default VNC size" description="Default VNC geometry values" />
		<param name="developer_site" type="text" menu="hide" default="FORGE" label="Developer Site" description="Name of project development site" />
		<param name="project_path" type="text" menu="hide" default="/projects/app-" label="Path to projects" description="Path to projects on development site (usually followed by the tool name)" />
		<param name="invokescript_dir" type="text" menu="hide" default="/apps" label="Invoke script dir" description="Directory for invoke script" />
		<param name="dev_suffix" type="text" menu="hide" default="_dev" label="Dev tool suffix" description="Suffix indicating the development instance of a tool (e.g. _dev for toolname_dev) " />
		<param name="group_prefix" type="text" menu="hide" default="app-" label="Dev group prefix" description="Prefix to name of development group (e.g. app-) " />
		<param name="demo_url" type="text" menu="hide" default="" label="Demo URL" description="URL to demo explaining contribution process" />
		<param name="doi_service" type="text" menu="hide" default="" label="DOI service path" description="URL of CreateHandle service for registering DOI">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="usedoi" type="radio" default="1" label="Use DOI?" description="Register DOI handle for new tool releases">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="exec_pu" type="radio" default="1" label="Include PU" description="Include Purdue campus as a tool access restriction">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="screenshot_edit" type="radio" default="0" label="Edit Screenshots" description="Allow editing of screenshots via contribtool and display of screenshots for individual versions">
			<option value="0">OFF</option>
			<option value="1">ON</option>
		</param>
	</params>
</install>

