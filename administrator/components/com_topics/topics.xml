		<filename>images/icons/trash.gif</filename>
		<filename>images/icons/txt.png</filename>
		<filename>images/icons/unknown.png</filename>
		<filename>images/icons/wmv.png</filename>
		<filename>images/icons/xls.png</filename>
		<filename>images/icons/zip.png</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.com_topics.ini</language>
        </languages>
	<administration>
	 	<files>
		</files>
	</administration>

	<params>
		<param name="show_author" type="radio" default="1" label="Authors" description="Show/Hide the list of authors">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_tags" type="radio" default="1" label="Tags" description="Show/Hide the item's tags">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_rating" type="radio" default="1" label="Rating" description="Show/Hide the rating">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_date" type="list" default="1" label="Date" description="Show/Hide the modified date">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_history" type="list" default="1" label="History" description="Show/Hide the revision history">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="allow_comments" type="list" default="1" label="Comments" description="Allow/Disallow comments">
			<option value="0">Disallow</option>
			<option value="1">Allow</option>
		</param>
	</params>

</install>
