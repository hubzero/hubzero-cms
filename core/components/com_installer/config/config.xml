<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="preferences"
		label="COM_INSTALLER_PREFERENCES_LABEL"
		description="COM_INSTALLER_PREFERENCES_DESCRIPTION"
		>
		<field
			name="cachetimeout"
			type="integer"
			label="COM_INSTALLER_CACHETIMEOUT_LABEL"
			description="COM_INSTALLER_CACHETIMEOUT_DESC"
			first="0"
			last="24"
			step="1"
			default="6"
			/>

		<field name="system_user" type="text" menu="hide" default="hubadmin" label="COM_UPDATE_SYSTEM_USER_LABEL" description="COM_UPDATE_SYSTEM_USER_DESC" size="50" />
	</fieldset>
	<fieldset name="git">
		<field name="git_repository_source" type="text" menu="hide" default="" label="COM_UPDATE_SYSTEM_GIT_REPOSITORY_UPSTREAM_LABEL" description="COM_UPDATE_SYSTEM_GIT_REPOSITORY_UPSTREAM_DESC" size="50" />
		<field name="git_auto_push_ref" type="text" menu="hide" default="" label="COM_UPDATE_SYSTEM_GIT_AUTO_PUSH_REF_LABEL" description="COM_UPDATE_SYSTEM_GIT_AUTO_PUSH_REF_DESC" size="50" />
	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_installer"
			section="component" />
	</fieldset>
</config>
