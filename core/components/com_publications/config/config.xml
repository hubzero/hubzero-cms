		<field name="show_authors" type="list" default="1" label="COM_PUBLICATIONS_CONFIG_SECTION_CONTRIBUTORS" description="COM_PUBLICATIONS_CONFIG_SECTION_CONTRIBUTORS_DESC">
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
		</field>
		<field name="format_authors" type="list" default="0" label="COM_PUBLICATIONS_CONFIG_AUTHOR_FORMAT" description="COM_PUBLICATIONS_CONFIG_AUTHOR_FORMAT_DESC">
			<option value="0">COM_PUBLICATIONS_CONFIG_AUTHOR_FORMAT_UNFORMATTED</option>
			<option value="1">COM_PUBLICATIONS_CONFIG_AUTHOR_FORMAT_APA</option>
		</field>
		<field name="show_ranking" type="list" default="0" label="COM_PUBLICATIONS_CONFIG_RANKING" description="COM_PUBLICATIONS_CONFIG_RANKING_DESC">
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
		</field>
		<field name="show_rating" type="list" default="0" label="COM_PUBLICATIONS_CONFIG_RATING" description="COM_PUBLICATIONS_CONFIG_RATING_DESC">
