		</field>
		<field name="default_category" type="text" menu="hide" default="dataset" label="COM_PUBLICATIONS_CONFIG_DEFAULT_CAT" description="COM_PUBLICATIONS_CONFIG_DEFAULT_CAT_DESC" />
