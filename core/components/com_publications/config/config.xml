			<option value="1">COM_PUBLICATIONS_SHOW_CITATION_MANUAL_AUTO</option>
			<option value="2">COM_PUBLICATIONS_SHOW_CITATION_AUTO</option>
			<option value="3">COM_PUBLICATIONS_SHOW_CITATION_MANUAL</option>
		</field>
		<field name="suggest_licence" type="list" default="0" label="COM_PUBLICATIONS_SUGGEST_LICENSE" description="COM_PUBLICATIONS_SUGGEST_LICENSE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="citation_format" type="list" default="apa" label="COM_PUBLICATIONS_CITATION_FORMAT" description="COM_PUBLICATIONS_CITATION_FORMAT_DESC">
			<option value="apa">APA</option>
			<option value="ieee">IEEE</option>
		</field>
