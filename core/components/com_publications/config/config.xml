			<option value="apa">APA</option>
			<option value="ieee">IEEE</option>
		</field>
		<field name="supportedtag" type="text" menu="hide" default="" label="COM_PUBLICATIONS_SUPPORTEDTAG_LABEL" description="COM_PUBLICATIONS_SUPPORTEDTAG_DESC" />
		<field name="supportedlink" type="text" menu="hide" default="" label="COM_PUBLICATIONS_SUPPORTEDLINK_LABEL" description="COM_PUBLICATIONS_SUPPORTEDLINK_DESC" />
		<field name="audiencelink" type="text" menu="hide" default="" label="COM_PUBLICATIONS_AUDIENCE_LINK_LABEL" description="COM_PUBLICATIONS_AUDIENCE_LINK_DESC" />
	</fieldset>
	<fieldset name="AIP">
		<field name="repository" type="list" default="0" label="COM_PUBLICATIONS_TRUSTED" description="COM_PUBLICATIONS_TRUSTED_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="aip_path" type="text" menu="hide" default="/srv/AIP" label="COM_PUBLICATIONS_AIP_PATH" description="COM_PUBLICATIONS_AIP_PATH_DESC" />
		<field name="aip_group" type="text" menu="hide" default="" label="COM_PUBLICATIONS_CONFIG_AIP_GROUP" description="COM_PUBLICATIONS_CONFIG_AIP_GROUP_DESC" />
	</fieldset>
	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" class="inputbox" validate="rules" filter="rules" component="com_publications" section="component" />
	</fieldset>
