		<field name="landingPage" type="text" menu="hide" default="" label="COM_STOREFRONT_CONFIG_LANDIBG_PAGE" description="COM_STOREFRONT_CONFIG_LANDIBG_PAGE_DESC" size="50" />
		<field name="productAccess" type="list" default="0" label="COM_STOREFRONT_CONFIG_PRODUCT_ACCESS" description="COM_STOREFRONT_CONFIG_PRODUCT_ACCESS_DESC">
			<option value="0">COM_STOREFRONT_CONFIG_PRODUCT_ACCESS_LEVELS</option>
			<option value="1">COM_STOREFRONT_CONFIG_PRODUCT_ACCESS_GROUPS</option>
		</field>
		<field name="quantityText" type="text" default="" label="COM_STOREFRONT_CONFIG_QUANTITY_TEXT" description="COM_STOREFRONT_CONFIG_QUANTITY_TEXT_DESC" />
	</fieldset>
	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" class="inputbox" validate="rules" filter="rules" component="com_storefront" section="component" />
	</fieldset>
</config>