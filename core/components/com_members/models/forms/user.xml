<form>
	<fields name="params">
		<!--  Basic user account settings. -->
		<fieldset name="settings" label="COM_MEMBERS_SETTINGS_FIELDSET_LABEL">

			<field name="admin_style" type="templatestyle"
				client="administrator"
				description="COM_MEMBERS_USER_FIELD_BACKEND_TEMPLATE_DESC"
				label="COM_MEMBERS_USER_FIELD_BACKEND_TEMPLATE_LABEL"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field name="admin_language" type="language"
				client="administrator"
				description="COM_MEMBERS_USER_FIELD_BACKEND_LANGUAGE_DESC"
				label="COM_MEMBERS_USER_FIELD_BACKEND_LANGUAGE_LABEL"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field name="language" type="language"
				client="site"
				description="COM_MEMBERS_USER_FIELD_FRONTEND_LANGUAGE_DESC"
				label="COM_MEMBERS_USER_FIELD_FRONTEND_LANGUAGE_LABEL"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field name="editor" type="plugins" folder="editors"
				description="COM_MEMBERS_USER_FIELD_EDITOR_DESC"
				label="COM_MEMBERS_USER_FIELD_EDITOR_LABEL"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field name="timezone" type="timezone"
				label="COM_MEMBERS_USER_FIELD_TIMEZONE_LABEL"
				description="COM_MEMBERS_USER_FIELD_TIMEZONE_DESC"
			>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>
		</fieldset>
	</fields>
</form>
