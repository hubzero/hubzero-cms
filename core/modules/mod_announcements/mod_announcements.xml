<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5.0" client="site" type="module">
	<name>mod_announcements</name>
	<creationDate>May 2010</creationDate>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.0.0</version>
	<description>MOD_ANNOUNCEMENTS_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_announcements">mod_announcements.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="catid" type="category" default="0" label="MOD_ANNOUNCEMENTS_PARAM_CATID_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_CATID_DESC" extension="com_content" />
				<field name="container" type="text" default="" label="MOD_ANNOUNCEMENTS_PARAM_CONTAINER_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_CONTAINER_DESC" />
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="numitems" type="text" default="5" label="MOD_ANNOUNCEMENTS_PARAM_NUMITEMS_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_NUMITEMS_DESC" />
				<field name="show_image" type="radio" default="0" label="MOD_ANNOUNCEMENTS_PARAM_SHOWIMAGE_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SHOWIMAGE_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="show_desc" type="radio" default="0" label="MOD_ANNOUNCEMENTS_PARAM_SHOWDESC_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SHOWDESC_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="show_morelink" type="radio" default="0" label="MOD_ANNOUNCEMENTS_PARAM_SHOWMORE_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SHOWMORE_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="show_viewall" type="radio" default="0" label="MOD_ANNOUNCEMENTS_PARAM_SHOWVIEWALL_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SHOWVIEWALL_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="show_search" type="radio" default="0" label="MOD_ANNOUNCEMENTS_PARAM_SHOWSEARCH_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SHOWSEARCH_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="show_date" type="radio" default="0" label="MOD_ANNOUNCEMENTS_PARAM_SHOWDATE_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SHOWDATE_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="show_subscribe" type="radio" default="0" label="MOD_ANNOUNCEMENTS_PARAM_SHOWSUBSCRIBE_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SHOWSUBSCRIBE_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
				<field name="word_count" type="text" size="6" default="100" label="MOD_ANNOUNCEMENTS_PARAM_WORDCOUNT_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_WORDCOUNT_DESC" />
				<field name="webpath" type="text" size="50" default="/site/announcements" label="MOD_ANNOUNCEMENTS_PARAM_WEBPATH_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_WEBPATH_DESC" />
				<field name="default_image" type="text" size="50" default="" label="MOD_ANNOUNCEMENTS_PARAM_DEFAULTIMAGE_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_DEFAULTIMAGE_DESC" />
				<field name="subscribe_path" type="text" size="50" default="" label="MOD_ANNOUNCEMENTS_PARAM_SUBSCRIBEPATH_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SUBSCRIBEPATH_DESC" />
				<field name="subscribe_label" type="text" size="50" default="Subscribe" label="MOD_ANNOUNCEMENTS_PARAM_SUBSCRIBELABEL_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_SUBSCRIBELABEL_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="list" default="0" label="MOD_ANNOUNCEMENTS_PARAM_CACHE_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_CACHE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="cache_time" type="text" default="15" label="MOD_ANNOUNCEMENTS_PARAM_CACHETIME_LABEL" description="MOD_ANNOUNCEMENTS_PARAM_CACHETIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
