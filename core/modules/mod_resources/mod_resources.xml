<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.5" client="administrator">
	<name>mod_resources</name>
	<creationDate>January 2015</creationDate>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.2.0</version>
	<description>MOD_RESOURCES_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_resources">mod_resources.php</filename>
		<filename>resources.css</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="cache" type="list" default="1" label="MOD_RESOURCES_CACHE_LABEL" description="MOD_RESOURCES_CACHE_DESC">
					<option value="1">MOD_RESOURCES_CACHE_GLOBAL</option>
					<option value="0">MOD_RESOURCES_CACHE_NONE</option>
				</field>
			</fieldset>
			<fieldset name="colors">
				<field name="color_published" type="text" default="#656565" label="MOD_RESOURCES_COLOR_PUBLISHED_LABEL" description="MOD_RESOURCES_COLOR_PUBLISHED_DESC" />
				<field name="color_draft" type="text" default="#999999" label="MOD_RESOURCES_COLOR_DRAFT_LABEL" description="MOD_RESOURCES_COLOR_DRAFT_DESC" />
				<field name="color_pending" type="text" default="#f9d180" label="MOD_RESOURCES_COLOR_PENDING_LABEL" description="MOD_RESOURCES_COLOR_PENDING_DESC" />
				<field name="color_removed" type="text" default="#cccccc" label="MOD_RESOURCES_COLOR_REMOVED_LABEL" description="MOD_RESOURCES_COLOR_REMOVED_DESC" />
				<field name="color_unpublished" type="text" default="#ffffff" label="MOD_RESOURCES_COLOR_UNPUBLISHED_LABEL" description="MOD_RESOURCES_COLOR_UNPUBLISHED_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>