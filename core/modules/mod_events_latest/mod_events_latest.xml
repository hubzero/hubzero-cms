<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5.0" client="site" type="module">
	<name>mod_events_latest</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>MOD_EVENTS_LATEST_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_events_latest">mod_events_latest.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>assets/css/mod_events_latest.css</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_EVENTS_LATEST_PARAM_CLASS_LABEL" description="MOD_EVENTS_LATEST_PARAM_CLASS_DESC" />
				<field name="startday" type="text" default="0" label="MOD_EVENTS_LATEST_PARAM_STARTDAY_LABEL" description="MOD_EVENTS_LATEST_PARAM_STARTDAY_DESC" />
				<field name="max_events" type="text" default="10" label="MOD_EVENTS_LATEST_PARAM_MAXEVENTS_LABEL" description="MOD_EVENTS_LATEST_PARAM_MAXEVENTS_DESC" />
				<field name="mode" type="radio" default="2" label="MOD_EVENTS_LATEST_PARAM_MODE_LABEL" description="MOD_EVENTS_LATEST_PARAM_MODE_DESC">
					<option value="0">MOD_EVENTS_LATEST_PARAM_MODE_CURRENT_WEEK</option>
					<option value="1">MOD_EVENTS_LATEST_PARAM_MODE_CURRENT_WEEK_AND_PAST</option>
					<option value="2">MOD_EVENTS_LATEST_PARAM_MODE_PLUS_DAY_RANGE</option>
					<option value="3">MOD_EVENTS_LATEST_PARAM_MODE_MINUS_DAY_RANGE</option>
					<option value="4">MOD_EVENTS_LATEST_PARAM_MODE_CURRENT_MONTH</option>
				</field>
				<field name="announcements" type="list" default="0" label="MOD_EVENTS_LATEST_PARAM_ANNOUNCEMENTS_LABEL" description="MOD_EVENTS_LATEST_PARAM_ANNOUNCEMENTS_DESC">
					<option value="0">MOD_EVENTS_LATEST_PARAM_ANNOUNCEMENTS_ALL</option>
					<option value="1">MOD_EVENTS_LATEST_PARAM_ANNOUNCEMENTS_EXCLUDE</option>
					<option value="2">MOD_EVENTS_LATEST_PARAM_ANNOUNCEMENTS_ONLY</option>
				</field>
				<field name="days" type="text" default="365" label="MOD_EVENTS_LATEST_PARAM_DAYS_LABEL" description="MOD_EVENTS_LATEST_PARAM_DAYS_DESC" />
				<field name="display_links" type="radio" default="0" label="MOD_EVENTS_LATEST_PARAM_DISPLAYLINKS_LABEL" description="MOD_EVENTS_LATEST_PARAM_DISPLAYLINKS_DESC">
					<option value="0">JHide</option>
					<option value="1">JShow</option>
				</field>
				<field name="display_year" type="radio" default="0" label="MOD_EVENTS_LATEST_PARAM_DISPLAYYEAR_LABEL" description="MOD_EVENTS_LATEST_PARAM_DISPLAYYEAR_DESC">
					<option value="0">JHide</option>
					<option value="1">JShow</option>
				</field>
				<field name="display_date_style" type="radio" default="0" label="MOD_EVENTS_LATEST_PARAM_DISPLAYDATESTYLE_LABEL" description="MOD_EVENTS_LATEST_PARAM_DISPLAYDATESTYLE_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="display_title_style" type="radio" default="0" label="MOD_EVENTS_LATEST_PARAM_DISPLAYTITLESTYLE_LABEL" description="MOD_EVENTS_LATEST_PARAM_DISPLAYTITLESTYLE_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="char_limit" type="text" default="150" label="MOD_EVENTS_LATEST_PARAM_CHARLIMIT_LABEL" description="MOD_EVENTS_LATEST_PARAM_CHARLIMIT_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="radio" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_events_latest.ini</language>
	</languages>
</extension>