<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5.0" client="site" type="module">
	<name>mod_hubzilla</name>
	<creationDate>August 2012</creationDate>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.5.0</version>
	<description>MOD_HUBZILLA_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_hubzilla">mod_hubzilla.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>index.html</filename>
		<filename>assets/css/mod_hubzilla.css</filename>
		<filename>assets/js/mod_hubzilla.js</filename>
		<filename>assets/sounds/roar.mp3</filename>
		<filename>assets/sounds/roar.ogg</filename>
		<filename>assets/sounds/roar.wav</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="posLeft" type="text" default="auto" label="MOD_HUBZILLA_PARAM_LEFT_LABEL" description="MOD_HUBZILLA_PARAM_LEFT_DESC" />
				<field name="posRight" type="text" default="5px" label="MOD_HUBZILLA_PARAM_RIGHT_LABEL" description="MOD_HUBZILLA_PARAM_RIGHT_DESC" />
				<field name="posTop" type="text" default="auto" label="MOD_HUBZILLA_PARAM_TOP_LABEL" description="MOD_HUBZILLA_PARAM_TOP_DESC" />
				<field name="posBottom" type="text" default="5px" label="MOD_HUBZILLA_PARAM_BOTTOM_LABEL" description="MOD_HUBZILLA_PARAM_BOTTOM_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="radio" default="0" label="MOD_HUBZILLA_PARAM_CACHE_LABEL" description="MOD_HUBZILLA_PARAM_CACHE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="cache_time" type="text" default="15" label="MOD_HUBZILLA_PARAM_CACHETIME_LABEL" description="MOD_HUBZILLA_PARAM_CACHETIME_DESC" />
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_hubzilla.ini</language>
	</languages>
</extension>