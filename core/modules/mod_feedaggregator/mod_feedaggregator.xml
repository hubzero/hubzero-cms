	<author>HUBzero</author>
	<creationDate>January 2015</creationDate>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<authorEmail>support@hubzero.org</authorEmail>
	<authorUrl>hubzero.org</authorUrl>
	<version>1.0.0</version>
	<description>MOD_FEEDAGGREGATOR_XML_DESCRIPTION</description>
	<files>
		<filename module="MOD_FEEDAGGREGATOR">MOD_FEEDAGGREGATOR.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.MOD_FEEDAGGREGATOR.ini</language>
		<language tag="en-GB">en-GB.MOD_FEEDAGGREGATOR.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_FEED_DISPLAY" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="itemcount" type="text" default="5" label="MOD_FEEDAGGREGATOR_FIELD_ITEMS_LABEL" description="MOD_FEEDAGGREGATOR_FIELD_ITEMS_DESC" />
				<field name="showdescription" type="radio" default="1" label="MOD_FEEDAGGREGATOR_FIELD_ITEMDESCRIPTION_LABEL" description="MOD_FEEDAGGREGATOR_FIELD_ITEMDESCRIPTION_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="word_count" type="text" size="6" default="250" label="MOD_FEEDAGGREGATOR_FIELD_WORDCOUNT_LABEL" description="MOD_FEEDAGGREGATOR_FIELD_WORDCOUNT_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
