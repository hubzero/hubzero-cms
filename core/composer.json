{
    "name": "hubzero/cms",
    "description": "HUBzero CMS",
    "type": "project",
    "keywords": [ "cms" , "hubzero" ],
    "homepage": "http://hubzero.org",
    "license": "LGPL-2.1",
    "authors": [
        {
            "name": "Hubzero",
            "email": "support@hubzero.org",
            "role": "Platform for Scientific Computing"
        }
    ],
    "support": {
        "email": "support@hubzero.org",
        "issues": "http://help.hubzero.org/support/ticket/new",
        "source": "http://hubzero.org/download"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/hubzero/flysystem-github"
        }
    ],
    "require": {
        "ezyang/htmlpurifier": "4.5.0",
        "facebook/graph-sdk": "^5.0",
        "tecnickcom/tcpdf": "6.0.017",
        "leafo/lessphp": "0.5.0",
        "swiftmailer/swiftmailer": "~v5.4.12",
        "monolog/monolog": "1.17.0",
        "willdurand/geocoder": "2.8.*",
        "predis/predis": "0.8.6",
        "symfony/yaml": "2.5.*",
        "symfony/http-foundation": "~v2.8.52",
        "simshaun/recurr": "0.3.2",
        "pelago/emogrifier": "dev-master",
        "google/apiclient": "^2.0",
        "guzzlehttp/guzzle": "^6.0",
        "authy/php": "2.*",
        "mandrill/mandrill": "1.0.*",
        "phpdocumentor/reflection-docblock": "2.0.4",
        "bshaffer/oauth2-server-php": "v1.4",
        "pear/net_dns2": "1.4.*",
        "hubzero/orcid-php": "0.*",
        "league/flysystem": "1.0.*",
        "hubzero/flysystem-github": "dev-develop",
        "nao-pon/flysystem-google-drive": "~1.1.13",
        "php-amqplib/php-amqplib": "2.5.*",
        "league/flysystem-aws-s3-v2": "^1.0",
        "simplepie/simplepie": "1.5",
        "solarium/solarium" : "3.8.1",
        "cilogon/oauth2-cilogon": "^1.1",
        "srmklive/flysystem-dropbox-v2": "^1.0",
        "stevenmaguire/oauth2-dropbox": "^2.0.0",
	"composer/composer": "1.6.3",
	"phpoffice/phpspreadsheet": "~1.8.2"
    },
    "require-dev": {
        "mockery/mockery": "dev-master",
	"jakub-onderka/php-parallel-lint": "0.9.*",
	"phpunit/dbunit": "1.4.*",
	"phpunit/phpunit": "4.*",
	"satooshi/php-coveralls": "1.0.*",
	"squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-0": { "Hubzero": "libraries/" },
        "psr-4": { "Bootstrap\\": "bootstrap/"},
        "classmap": [ "libraries/joomla" ]
    },
    "config": {
        "preferred-install": "dist",
        "platform": {
            "php": "5.6.1"
        }
    }
}
