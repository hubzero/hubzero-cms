<extension version="1.7" type="plugin" course="courses">
	<name>Courses - Pages</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Display and manage course pages</description>
	<files>
		<filename plugin="pages">pages.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_courses_pages.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_access" type="list" default="members" label="Default Plugin Access" description="Default access level assigned to the blog plugin.">
					<option value="anyone">Any HUB Visitor</option>
					<option value="registered">Only Registered HUB Users</option>
					<option value="members">Only Course Members</option>
					<option value="nobody">Disabled/Off</option>
				</field>
				<field type="spacer" />
				<field name="uploadpath" type="text" menu="hide" default="/site/courses/{{gid}}/pages" label="Upload path" description="File path for uploads" />
				<field name="maxAllowed" type="text" menu="hide" default="40000000" label="Max File Size (in bytes)" description="The maximum file size for uploads" />
			</fieldset>
		</fields>
	</config>
</extension>
