<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" course="courses">
	<name>Courses - Notes</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Display user notes for a course</description>
	<files>
		<filename plugin="notes">notes.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_courses_notes.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_access" type="list" default="managers" label="Default Plugin Access" description="Default access level assigned to the blog plugin.">
					<option value="anyone">Any HUB Visitor</option>
					<option value="registered">Only Registered HUB Users</option>
					<option value="members">Only Course Members</option>
					<option value="nobody">Disabled/Off</option>
				</field>
				<field type="spacer" />
				<field name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of items to return"/>
			</fieldset>
		</fields>
	</config>
</extension>
