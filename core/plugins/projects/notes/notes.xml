<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="projects">
	<name>Projects - Notes</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Manage project notes</description>
	<files>
		<filename plugin="notes">notes.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_projects_notes.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_limit" type="text" menu="hide" label="Display limit" default="50" description="Number of items to return" />
				<field name="enable_publinks" type="radio" default="0" label="Enable public links" description="Enable project team members to generate public links to notes and list/unlist notes on project public page">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>