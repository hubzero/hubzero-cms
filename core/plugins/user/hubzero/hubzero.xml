<?xml version="1.0" encoding="utf-8"?>
<extension version="2.2" type="plugin" group="user">
	<name>plg_user_hubzero</name>
	<author>HUBzero</author>
	<creationDate>January 2018</creationDate>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<authorEmail>support@hubzero.org</authorEmail>
	<authorUrl>https://hubzero.org</authorUrl>
	<version>2.2.0</version>
	<description>PLG_USER_HUBZERO_XML_DESCRIPTION</description>
	<files>
		<filename plugin="hubzero">hubzero.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_user_hubzero.ini</language>
		<language tag="en-GB">en-GB.plg_user_hubzero.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="autoregister" type="radio"
					default="1"
					description="PLG_USER_HUBZERO_FIELD_AUTOREGISTER_DESC"
					label="PLG_USER_HUBZERO_FIELD_AUTOREGISTER_LABEL"
				>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>

				<field
					name="mail_to_user"
					type="radio"
					default="0"
					label="PLG_USER_HUBZERO_FIELD_MAILTOUSER_LABEL"
					description="PLG_USER_HUBZERO_FIELD_MAILTOUSER_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>

				<field 
					name="emails"
					type="textarea"
					cols="30"
					rows="10"
					default=""
					label="PLG_USER_HUBZERO_FIELD_MAILTOADMIN_LABEL" 
					description="PLG_USER_HUBZERO_FIELD_MAILTOADMIN_DESC">
				</field>

			</fieldset>

		</fields>
	</config>
</extension>
