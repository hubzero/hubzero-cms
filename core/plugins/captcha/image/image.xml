<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5" type="plugin" group="captcha">
	<name>PLG_CAPTCHA_IMAGE</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>PLG_CAPTCHA_IMAGE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="image">image.php</filename>
		<filename>assets/css/imagea.css</filename>
		<filename>assets/js/image.js</filename>
		<filename>assets/fonts/adlibBT.png</filename>
		<filename>assets/fonts/adlibBT.TTF</filename>
		<filename>views/display/tmpl/default.php</filename>
		<filename>views/display/tmpl/default.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_captcha_image.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="bgColor" type="text" size="25" default="#ffffff" label="PLG_CAPTCHA_IMAGE_BACKGROUND_LABEL" description="PLG_CAPTCHA_IMAGE_BACKGROUND_DESC" />
				<field name="textColor" type="text" size="25" default="#2c8007" label="PLG_CAPTCHA_IMAGE_TEXT_LABEL" description="PLG_CAPTCHA_IMAGE_TEXT_DESC" />
				<field name="imageFunction" type="list" default="Adv" label="PLG_CAPTCHA_IMAGE_FUNCTION_LABEL" description="PLG_CAPTCHA_IMAGE_FUNCTION_DESC">
					<option value="Plain">PLG_CAPTCHA_IMAGE_FUNCTION_PLAIN</option>
					<option value="Adv">PLG_CAPTCHA_IMAGE_FUNCTION_DISTORTED</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>