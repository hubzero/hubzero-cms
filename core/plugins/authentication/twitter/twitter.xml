<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="authentication">
	<name>Authentication - Twitter</name>
	<creationDate>May 2013</creationDate>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.7</version>
	<description>PLG_AUTHENTICATION_TWITTER_XML_DESCRIPTION</description>
	<files>
		<filename plugin="twitter.php">twitter.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="app_id"       type="text" size="20" label="PLG_AUTHENTICATION_TWITTER_PARAM_KEY_LABEL"    description="PLG_AUTHENTICATION_TWITTER_PARAM_KEY_DESC" />
				<field name="app_secret"   type="text" size="32" label="PLG_AUTHENTICATION_TWITTER_PARAM_SECRET_LABEL" description="PLG_AUTHENTICATION_TWITTER_PARAM_SECRET_DESC" />
				<field name="display_name" type="text" size="32" label="PLG_AUTHENTICATION_TWITTER_PARAM_NAME_LABEL"   description="PLG_AUTHENTICATION_TWITTER_PARAM_NAME_DESC" default="Twitter" />
				<field name="site_login"   type="radio" label="PLG_AUTHENTICATION_TWITTER_PARAM_SITELOGIN_LABEL" default="1" description="PLG_AUTHENTICATION_TWITTER_PARAM_SITELOGIN_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="admin_login"  type="radio" label="PLG_AUTHENTICATION_TWITTER_PARAM_ADMINLOGIN_LABEL" default="0" description="PLG_AUTHENTICATION_TWITTER_PARAM_ADMINLOGIN_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
