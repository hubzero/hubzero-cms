<extension version="1.7" type="plugin" group="cron">
	<name>Cron - Publications</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Cron events for publications</description>
	<files>
		<filename plugin="publications">publications.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_cron_publications.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset group="authorstats">
				<field name="userids" type="text" menu="hide" label="PLG_CRON_PUBLICATIONS_USERIDS_LABEL" default="" description="PLG_CRON_PUBLICATIONS_USERIDS_DESC" />
			</fieldset>
			<fieldset group="ftplinkdates">
				<field name="startdate" type="text" label="PLG_CRON_PUBLICATIONS_STARTDATE_LABEL" default="" description="PLG_CRON_PUBLICATIONS_STARTDATE_DESC" />
			</fieldset>
		</fields>
	</config>
	<params group="authorstats">
		<param name="userids" type="text" menu="hide" label="PLG_CRON_PUBLICATIONS_USERIDS_LABEL" default="" description="PLG_CRON_PUBLICATIONS_USERIDS_DESC" />
	</params>
	<params group="ftplinkdates">
		<param name="startdate" type="text" label="PLG_CRON_PUBLICATIONS_STARTDATE_LABEL" default="" description="PLG_CRON_PUBLICATIONS_STARTDATE_DESC" />
	</params>
</extension>
