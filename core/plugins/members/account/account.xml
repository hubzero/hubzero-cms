<extension version="1.7" type="plugin" group="members">
	<name>Members - Account</name>
	<author>Sam Wilson</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Display a member's account information</description>
	<files>
		<filename plugin="account">account.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_members_account.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="ssh_key_upload" type="list" default="0" label="Allow SSH Public Key Upload" description="Allow users to upload their public ssh key via the members account plugin.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>