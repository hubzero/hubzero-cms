<extension version="1.7" type="plugin" group="autocompleter">
	<name>HUBzero - Autocompleter</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Creates an auto-complete field for different types of entry (tags, groups, users)</description>
	<files>
		<filename plugin="autocompleter">autocompleter.php</filename>
		<filename>autocomplete/autocompleter.css</filename>
		<filename>autocomplete/autocompleter.js</filename>
		<filename>autocomplete/observer.js</filename>
		<filename>autocomplete/close.gif</filename>
		<filename>autocomplete/spinner.gif</filename>
		<filename>autocomplete/textboxlist.js</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
			</fieldset>
		</fields>
	</config>
</extension>
