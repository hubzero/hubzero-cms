		<filename plugin="googlemapsbusiness">googlemapsbusiness.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_geocode_googlemapsbusiness.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="clientId" type="text" menu="hide" label="Client ID" default="" description="Client ID" />
				<field name="privateKey" type="text" menu="hide" label="Private Key" default="" description="Private key" />
			</fieldset>
		</fields>
	</config>
</extension>
