<extension version="2.5" type="plugin" group="antispam">
	<name>plg_antispam_linkrife</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<creationDate>January 2015</creationDate>
	<version>1.0.0</version>
	<description>PLG_ANTISPAM_LINKRIFE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="linkrife">linkrife.php</filename>
		<filename>index.html</filename>
		<filename>Detector.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_antispam_linkrife.ini</language>
		<language tag="en-GB">en-GB.plg_antispam_linkrife.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="linkFrequency" type="text" size="10" default="10" label="PLG_ANTISPAM_LINKRIFE_PARAM_LINKFREQUENCY_LABEL" description="PLG_ANTISPAM_LINKRIFE_PARAM_LINKFREQUENCY_DESC" />
				<field name="linkRatio" type="text" size="10" default="40" label="PLG_ANTISPAM_LINKRIFE_PARAM_LINKRATIO_LABEL" description="PLG_ANTISPAM_LINKRIFE_PARAM_LINKRATIO_DESC" />
				<field name="linkValidation" type="list" default="0" label="PLG_ANTISPAM_LINKRIFE_PARAM_LINKVALIDATION_LABEL" description="PLG_ANTISPAM_LINKRIFE_PARAM_LINKVALIDATION_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
