<extension version="1.7" type="plugin" group="filesystem">
	<name>Filesystem - Github</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>PLG_FILESYSTEM_GITHUB_XML_DESCRIPTION</description>
	<files>
		<filename plugin="github">github.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_filesystem_github.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="credentials">
				<field name="app_key" type="text" default="" label="PLG_FILESYSTEM_GITHUB_APP_KEY_LABEL" description="PLG_FILESYSTEM_GITHUB_APP_KEY_DESC" />
				<field name="app_secret" type="text" default="" label="PLG_FILESYSTEM_GITHUB_APP_SECRET_LABEL" description="PLG_FILESYSTEM_GITHUB_APP_SECRET_DESC" />
			</fieldset>
			<fieldset name="user_credentials">
				<field name="repository" type="text" default="" label="PLG_FILESYSTEM_GITHUB_REPOSITORY_LABEL" description="PLG_FILESYSTEM_GITHUB_REPOSITORY_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
