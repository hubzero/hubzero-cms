<?xml version="1.0" encoding="utf-8"?>
<extension version="1.0" type="plugin" group="filesystem">
	<name>Filesystem - AWS S3</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>PLG_FILESYSTEM_AWSS3_XML_DESCRIPTION</description>
	<files>
		<filename plugin="awss3">awss3.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_filesystem_awss3.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="user_credentials">
				<field name="app_id" type="text" default="" label="PLG_FILESYSTEM_AWSS3_APP_ID_LABEL" description="PLG_FILESYSTEM_AWSS3_APP_ID_DESC" />
				<field name="app_secret" type="text" default="" label="PLG_FILESYSTEM_AWSS3_APP_SECRET_LABEL" description="PLG_FILESYSTEM_AWSS3_APP_SECRET_DESC" />
				<field name="region" type="text" default="" label="PLG_FILESYSTEM_AWSS3_REGION_LABEL" description="PLG_FILESYSTEM_AWSS3_REGION_DESC" />
				<field name="bucket" type="text" default="" label="PLG_FILESYSTEM_AWSS3_BUCKET_LABEL" description="PLG_FILESYSTEM_AWSS3_BUCKET_DESC" />
				<field name="directory" type="text" default="" label="PLG_FILESYSTEM_AWSS3_DIRECTORY_LABEL" description="PLG_FILESYSTEM_AWSS3_DIRECTORY_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
