<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="oaipmh">
	<name>OAIPMH - Resources</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>PLG_OAIPMH_XML_DESCRIPTION</description>
	<files>
		<filename plugin="resources">resources.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_oaipmh_resources.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/core/plugins/oaipmh/resources">
				<field name="type" type="resourcetype" default="0" label="PLG_OAIPMH_RESOURCES_TYPE_LABEL" description="PLG_OAIPMH_RESOURCES_TYPE_DESC" />
				<field name="citations" type="list" default="1" label="PLG_OAIPMH_RESOURCES_CITATIONS_LABEL" description="PLG_OAIPMH_RESOURCES_CITATIONS_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
