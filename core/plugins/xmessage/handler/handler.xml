<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="xmessage">
	<name>XMessage - Handler</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Enables system messages</description>
	<files>
		<filename plugin="handler">handler.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="time_limit" type="text" size="15" default="30" label="PLG_XMESSAGE_HANDLER_TIME_LABEL" description="PLG_XMESSAGE_HANDLER_TIME_DESC"/>
				<field name="daily_limit" type="text" size="10" default="100" label="PLG_XMESSAGE_HANDLER_DAILY_LABEL" description="PLG_XMESSAGE_HANDLER_DAILY_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>

