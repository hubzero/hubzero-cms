<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="authfactors">
	<name>Authfactors - Authy</name>
	<creationDate>April 2015</creationDate>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.5</version>
	<description>Handles using the Authy service as a secondary auth factor.</description>
	<files>
		<filename plugin="authy">authy.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="key" type="text" size="32" label="App Key" description="Your Authy secret key" />
			</fieldset>
		</fields>
	</config>
</extension>
