<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5" type="plugin" group="groups">
	<name>Groups - Member Options</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright (c) 2005-2020 The Regents of the University of California.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.5</version>
	<description>Group Member Options</description>
	<files>
		<filename plugin="memberoptions">memberoptions.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_groups_memberoptions.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_tab" type="list" default="1" label="Display in Menu" description="Display 'Projects' in group menu.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
