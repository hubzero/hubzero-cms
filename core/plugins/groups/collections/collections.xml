<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5" type="plugin" group="groups">
	<name>Groups - Collections</name>
	<creationDate>December 2012</creationDate>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.5</version>
	<description>Display collections</description>
	<files>
		<filename plugin="collections">collections.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_groups_collections.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_access" type="list" default="members" label="Default Plugin Access" description="Default access level assigned to the 'Collections' plugin.">
					<option value="anyone">Any HUB Visitor</option>
					<option value="registered">Only Registered HUB Users</option>
					<option value="members">Only Group Members</option>
					<option value="nobody">Disabled/Off</option>
				</field>
				<field name="display_tab" type="list" default="1" label="Display in Menu" description="Display 'Collections' in group menu.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field type="spacer" />
				<field name="maxWidth" type="text" menu="hide" default="290" label="Max Image Width" description="Max Image Width for tile listing" />
				<field name="posting" type="list" default="0" label="Article Posting" description="The default setting for who can post to the blog.">
					<option value="0">All members</option>
					<option value="1">Managers only</option>
				</field>
				<field name="feeds_enabled" type="list" default="1" label="Feeds" description="Enable/Disable RSS feeds">
					<option value="0">Disabled</option>
					<option value="1">Enabled</option>
				</field>
				<field name="feed_entries" type="list" default="partial" label="Feed Entries" description="The length of RSS feed entries">
					<option value="full">Full</option>
					<option value="partial">Partial</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
