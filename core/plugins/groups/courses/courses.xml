<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5" type="plugin" group="groups">
	<name>Groups - Courses</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Display courses for a group</description>
	<files>
		<filename plugin="courses">courses.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_groups_courses.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_access" type="list" default="members" label="Default Plugin Access" description="Default access level assigned to the plugin.">
					<option value="anyone">Any HUB Visitor</option>
					<option value="registered">Only Registered HUB Users</option>
					<option value="members">Only Group Members</option>
					<option value="nobody">Disabled/Off</option>
				</field>
				<field name="display_tab" type="list" default="1" label="Display in Menu" description="Display 'Forum' in group menu.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field type="spacer" />
				<field name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of items to return"/>
			</fieldset>
		</fields>
	</config>
</extension>

