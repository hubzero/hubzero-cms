<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="resources">
	<name>Resource - About</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Displays about information for a resource</description>
	<files>
		<filename plugin="about">about.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_resources_about.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="badges" type="radio" default="0" label="PLG_RESOURCES_ABOUT_SHOW_BADGES_LABEL" description="PLG_RESOURCES_ABOUT_SHOW_BADGES_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
