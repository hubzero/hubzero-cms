<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="resources">
	<name>Resource - Citations</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Displays citations for a resource</description>
	<files>
		<filename plugin="citations">citations.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_resources_citations.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_limit" type="text" size="5" default="50" label="PLG_RESOURCES_CITATIONS_LIMIT_LABEL" description="PLG_RESOURCES_CITATIONS_LIMIT_DESC"/>
				<field name="format" type="text" size="10" default="APA" label="PLG_RESOURCES_CITATIONS_FORMAT_LABEL" description="PLG_RESOURCES_CITATIONS_FORMAT_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
