<extension version="1.7" type="plugin" group="tools">
	<name>Tools - NoVNC</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Display a tool session with NoVNC</description>
	<files>
		<filename plugin="novnc">novnc.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_tools_novnc.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="browsers" type="textarea" rows="15" cols="40" default="*, safari 5.1&#13;&#10;*, chrome 27.0&#13;&#10;*, iceweasel 38.0&#13;&#10;*, firefox 30.0&#13;&#10;*, opera 23.0&#13;&#10;*, mozilla 5.0&#13;&#10;iOS, safari 1.0&#13;&#10;Windows, msie 10.0&#13;&#10;Windows, ie 10.0" label="Minimum OS/Browsers" description="A list of minimum OS/Browser required. One entry per line, the pattern is 'OS, BROWSER MAJOR.MINOR'. If all OSes apply, us an asterisk." />
				<field name="regexes" type="textarea" rows="15" cols="40" default="" label="UAS Regexes" description="A list of regular expressions to run against the User Agent String. One entry per line. If a UAS matches a pattern, the plugin will no render." />
			</fieldset>
		</fields>
	</config>
</extension>
