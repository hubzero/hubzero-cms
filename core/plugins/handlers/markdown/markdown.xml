<?xml version="1.0" encoding="utf-8"?>
<extension version="2.2.14" type="plugin" group="handlers">
	<name>PLG_HANDLERS_MARKDOWN</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright (c) 2005-2020 The Regents of the University of California.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>PLG_HANDLERS_MARKDOWN_XML_DESCRIPTION</description>
	<files>
		<filename plugin="markdown">markdown.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_handlers_markdown.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="style" name="type" default="Markdown" label="PLG_HANDLERS_MARKDOWN_STYLE_LABEL" description="PLG_HANDLERS_MARKDOWN_STYLE_DESC">
					<option value="Markdown">Markdown</option>
					<option value="GithubMarkdown">Github Markdown</option>
					<option value="MarkdownExtra">Markdown Extra</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
