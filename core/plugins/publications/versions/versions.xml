<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="publications">
	<name>Publication - versions</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Displays all versions of a publication</description>
	<files>
		<filename plugin="versions">versions.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_publication_versions.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of items to return"/>
			</fieldset>
		</fields>
	</config>
</extension>
