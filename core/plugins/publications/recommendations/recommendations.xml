	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>PLG_PUBLICATIONS_RECOMMENDATIONS_DESCRIPTION</description>
	<files>
		<filename plugin="recommendations">recommendations.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_publication_recommendations.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="threshold" type="text" size="5" default="0.21" label="Threshold" description="The threshold for returning results"/>
