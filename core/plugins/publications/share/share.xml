<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="publications">
	<name>Publication - Share</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Display options to post publication link on Facebbok, Twitter etc.</description>
	<files>
		<filename plugin="share">share.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_publication_share.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="icons_limit" type="radio" default="3" label="PLG_PUBLICATIONS_SHARE_LIMIT_LABEL" description="PLG_PUBLICATIONS_SHARE_LIMIT_DESC">
					<option value="3">PLG_PUBLICATIONS_SHARE_LIMIT_THREE</option>
					<option value="0">PLG_PUBLICATIONS_SHARE_NO_LIMIT</option>
				</field>
				<field name="share_facebook" type="radio" default="1" label="PLG_PUBLICATIONS_SHARE_SHOW_FACEBOOK_LABEL" description="PLG_PUBLICATIONS_SHARE_SHOW_FACEBOOK_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="share_twitter" type="radio" default="1" label="PLG_PUBLICATIONS_SHARE_SHOW_TWITTER_LABEL" description="PLG_PUBLICATIONS_SHARE_SHOW_TWITTER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="share_google" type="radio" default="1" label="PLG_PUBLICATIONS_SHARE_SHOW_GOOGLE_LABEL" description="PLG_PUBLICATIONS_SHARE_SHOW_GOOGLE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="share_linkedin" type="radio" default="1" label="PLG_PUBLICATIONS_SHARE_SHOW_LINKEDIN_LABEL" description="PLG_PUBLICATIONS_SHARE_SHOW_LINKEDIN_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="share_pinterest" type="radio" default="1" label="PLG_PUBLICATIONS_SHARE_SHOW_PINTEREST_LABEL" description="PLG_PUBLICATIONS_SHARE_SHOW_PINTEREST_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="share_delicious" type="radio" default="1" label="PLG_PUBLICATIONS_SHARE_SHOW_DELICIOUS_LABEL" description="PLG_PUBLICATIONS_SHARE_SHOW_DELICIOUS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="share_reddit" type="radio" default="1" label="PLG_PUBLICATIONS_SHARE_SHOW_REDDIT_LABEL" description="PLG_PUBLICATIONS_SHARE_SHOW_REDDIT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
