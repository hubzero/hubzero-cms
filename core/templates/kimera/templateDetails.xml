<extension type="template" version="2.5">
	<name>kimera</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Site template for HUBzero CMS</description>
	<files>
		<filename>css/component.css</filename>
		<filename>css/error.css</filename>
		<filename>css/index.css</filename>
		<filename>css/print.css</filename>
		<filename>css/browser/ie8.css</filename>
		<filename>css/browser/ie9.css</filename>
		<filename>css/pages/community.css</filename>
		<filename>css/pages/congrats.css</filename>
		<filename>css/pages/discover.css</filename>
		<filename>css/pages/home.css</filename>
		<filename>html/mod_breadcrumbs/default.php</filename>
		<filename>html/mod_reportproblems/mod_reportproblems.css</filename>
		<filename>html/mod_search/default.php</filename>
		<filename>index.php</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>js/hub.js</filename>
		<filename>template_thumbnail.png</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.tpl_kimera.ini</language>
	</languages>
	<positions>
		<position>footer</position>
		<position>banner</position>
		<position>welcome</position>
		<position>left</position>
		<position>right</position>
		<position>helppane</position>
		<position>user3</position>
		<position>introblock</position>
		<position>notices</position>
		<position>search</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="registerLink" type="list" default="0" label="TPL_KIMERA_FIELD_REGISTER_LABEL" description="TPL_KIMERA_FIELD_REGISTER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="header" type="list" default="light" label="TPL_KIMERA_FIELD_HEADER_LABEL" description="TPL_KIMERA_FIELD_HEADER_DESC">
					<option value="light">TPL_KIMERA_FIELD_HEADER_LIGHT</option>
					<option value="dark">TPL_KIMERA_FIELD_HEADER_DARK</option>
				</field>
				<field name="background" type="list" default="delauney" label="TPL_KIMERA_FIELD_BACKGROUND_LABEL" description="TPL_KIMERA_FIELD_BACKGROUND_DESC">
					<option value="none">TPL_KIMERA_FIELD_BACKGROUND_NONE</option>
					<option value="stripes">TPL_KIMERA_FIELD_BACKGROUND_STRIPES</option>
					<option value="checkered">TPL_KIMERA_FIELD_BACKGROUND_CHECKERED</option>
					<option value="picnic">TPL_KIMERA_FIELD_BACKGROUND_PICNIC</option>
					<option value="blueprint">TPL_KIMERA_FIELD_BACKGROUND_BLUEPRINT</option>
					<option value="triangles">TPL_KIMERA_FIELD_BACKGROUND_TRIANGLES</option>
					<option value="plaid">TPL_KIMERA_FIELD_BACKGROUND_PLAID</option>
					<option value="delauney">TPL_KIMERA_FIELD_BACKGROUND_DELAUNEY</option>
					<option value="bokeh">TPL_KIMERA_FIELD_BACKGROUND_BOKEH</option>
				</field>
				<field name="colorPrimary" type="color" default="" label="TPL_KIMERA_FIELD_COLORPRIMARY_LABEL" description="TPL_KIMERA_FIELD_COLORPRIMARY_DESC" />
				<field name="colorSecondary" type="color" default="" label="TPL_KIMERA_FIELD_COLORSECONDARY_LABEL" description="TPL_KIMERA_FIELD_COLORSECONDARY_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="backgroundImage" type="text" default="" label="TPL_KIMERA_FIELD_BACKGROUNDIMG_LABEL" description="TPL_KIMERA_FIELD_BACKGROUNDIMG_DESC" />
				<field name="colorPrimaryOpacity" type="text" default="" label="TPL_KIMERA_FIELD_COLORPRIMARYOPACITY_LABEL" description="TPL_KIMERA_FIELD_COLORPRIMARYOPACITY_DESC" />
				<field name="colorSecondaryOpacity" type="text" default="" label="TPL_KIMERA_FIELD_COLORSECONDARYOPACITY_LABEL" description="TPL_KIMERA_FIELD_COLORSECONDARYOPACITY_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>