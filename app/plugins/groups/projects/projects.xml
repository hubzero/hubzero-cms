	<name>Groups - Projects</name>
	<author>HUBzero</author>
	<authorUrl>hubzero.org</authorUrl>
	<authorEmail>support@hubzero.org</authorEmail>
	<copyright>Copyright 2005-2019 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>PLG_GROUPS_PROJECTS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="projects">projects.php</filename>
		<filename>assets/css//projects.css</filename>
		<filename>assets/js/projects.js</filename>
		<filename>views/browse/tmpl/default.php</filename>
		<filename>views/browse/tmpl/list.php</filename>
		<filename>views/partials/tmpl/submenu.php</filename>
		<filename>views/updates/tmpl/default.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_groups_projects.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_access" type="list" default="members" label="PLG_GROUPS_PROJECTS_PARAM_PLUGINACCESS_LABEL" description="PLG_GROUPS_PROJECTS_PARAM_PLUGINACCESS_DESC">
					<option value="anyone">PLG_GROUPS_PROJECTS_PARAM_PLUGINACCESS_ANYONE</option>
					<option value="registered">PLG_GROUPS_PROJECTS_PARAM_PLUGINACCESS_REGISTERED</option>
					<option value="members">PLG_GROUPS_PROJECTS_PARAM_PLUGINACCESS_MEMBERS</option>
					<option value="nobody">PLG_GROUPS_PROJECTS_PARAM_PLUGINACCESS_NOBODY</option>
				</field>
				<field name="display_tab" type="list" default="1" label="PLG_GROUPS_PROJECTS_PARAM_DISPLAYTAB_LABEL" description="PLG_GROUPS_PROJECTS_PARAM_DISPLAYTAB_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
