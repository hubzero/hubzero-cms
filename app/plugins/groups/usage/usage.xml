<extension version="1.7" type="plugin" group="groups">
	<name>Groups - Usage</name>
	<author>HUBzero</author>
	<creationDate>June 2008</creationDate>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.5</version>
	<description>Display usage information for a group</description>
	<files>
		<filename plugin="usage">usage.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_groups_usage.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_access" type="list" default="members" label="Default Plugin Access" description="Default access level assigned to the blog plugin.">
					<option value="anyone">Any HUB Visitor</option>
					<option value="registered">Only Registered HUB Users</option>
					<option value="members">Only Group Members</option>
					<option value="nobody">Disabled/Off</option>
				</field>
				<field name="display_tab" type="list" default="1" label="Display in Menu" description="Display 'Usage' in group menu.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
