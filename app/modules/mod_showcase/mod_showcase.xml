<extension version="0.0.999" client="site" type="module">
	<name>Showcase</name>
	<author>QUBES</author>
	<creationDate>January 2018</creationDate>
	<version>0.0.999</version>
	<description>Showcase billboards of content in grid format</description>
	<files>
		<filename module="mod_showcase">mod_showcase.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>assets/css/mod_showcase.css</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_SHOWCASE_PARAM_CLASS_LABEL" description="MOD_SHOWCASE_PARAM_CLASS_DESC" />

				<field name="autotag" type="list" default="0" label="MOD_SHOWCASE_PARAM_AUTOTAG_LABEL" description="MOD_SHOWCASE_PARAM_AUTOTAG_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="items" type="textarea" rows="15" cols="40" default="" label="MOD_SHOWCASE_PARAM_ITEMS_LABEL" description="MOD_SHOWCASE_PARAM_ITEMS_DESC" />
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_showcase.ini</language>
	</languages>
</extension>