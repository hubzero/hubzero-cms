<?xml version="1.0" ?>
<install version="1.5.0" type="plugin" plugin="code">
	<name>Advanced Code Editor</name>
	<version>1.5.7.4</version>
	<creationDate>07 June 2010</creationDate>
	<author>Ryan Demmer</author>
	<authorEmail>info@joomlacontenteditor.net</authorEmail>
	<authorUrl>http://www.joomlacontenteditor.net/</authorUrl>
	<copyright>Ryan Demmer</copyright>
	<license>GNU/GPL</license>
	<description>JCE ADVCODE DESC</description>
	<icon>advcode</icon>
	<layout>advcode</layout>
	<files></files>
	<params group="standard">
		<param name="advcode_toggle" type="radio" default="1" label="PARAM EDITOR TOGGLE ALLOW" description="PARAM EDITOR TOGGLE ALLOW DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
		<param name="advcode_editor_state" type="radio" default="1" label="PARAM EDITOR STATE" description="PARAM EDITOR STATE DESC">
            <option value="1">ON</option>
            <option value="0">OFF</option>
        </param>
        <param name="advcode_toggle_text" type="text" default="[show/hide]" label="PARAM EDITOR TOGGLE TEXT" description="PARAM EDITOR TOGGLE TEXT DESC" />
	</params>
</install>
