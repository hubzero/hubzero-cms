<extension version="1.5" type="plugin" group="hubzero">
	<name>HUBzero - Image CAPTCHA</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Generates an image based CAPTCHA</description>
	<files>
		<filename plugin="imagecaptcha">imagecaptcha.php</filename>
		<filename>imagecaptcha/imagecaptcha.css</filename>
		<filename>imagecaptcha/imagecaptcha.js</filename>
		<filename>adlibBT.png</filename>
		<filename>adlibBT.TTF</filename>
		<filename>views/display/tmpl/default.php</filename>
		<filename>views/display/tmpl/default.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_hubzero_imagecaptcha.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="bgColor" type="text" size="25" default="#2c8007" label="Background Color" description="Enter color(6 letter hex value )" />
				<field name="textColor" type="text" size="25" default="#ffffff" label="Text Color" description="Enter color(6 letter hex value)" />
				<field name="imageFunction" type="list" default="Adv" label="Select Image Function" description="Select wether you want to show distorted letters or plane letters">
					<option value="Plain">Plain letters</option>
					<option value="Adv">Distorted letters</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>