<install version="1.5" type="plugin" group="resources">
	<name>Publication - Recommendations</name>
	<author>Alissa Nedossekina</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Display recommendations for a publication</description>
	<files>
		<filename plugin="recommendations">recommendations.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_publication_recommendations.ini</language>
	</languages>
	<params>
		<param name="threshold" type="text" size="5" default="0.21" label="Threshold" description="The threshold for returning results"/>
		<param name="display_limit" type="text" size="5" default="10" label="Display Limit" description="Number of items to return"/>
	</params>
</install>