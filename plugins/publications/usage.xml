<install version="1.5" type="plugin" group="resources">
	<name>Resource - Usage</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Display usage information for a resource</description>
	<files>
		<filename plugin="usage">usage.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_publication_usage.ini</language>
	</languages>
	<params>
		<param name="period" type="text" size="5" default="15" label="Time period" description="Time period to pull data for"/>
		<param name="chart_path" type="text" size="25" default="/site/usage/chart_resources/" label="Chart path" description="Path to the directory where charts are stored"/>
		<param name="map_path" type="text" size="25" default="/site/usage/resource_maps/" label="Map path" description="Path to the directory where map images are stored"/>
	</params>
</install>