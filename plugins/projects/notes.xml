<install version="1.5" type="plugin" group="projects">
	<name>Projects - Notes</name>
	<author>Alissa Nedossekina</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Manage project notes(wiki)</description>
	<files>
		<filename plugin="notes">notes.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_projects_notes.ini</language>
	</languages>
	<params>
		<param name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of items to return"/>
		<param name="enable_publinks" type="radio" default="0" label="Enable public links" description="Enable project team members to generate public links to notes and list/unlist notes on project public page">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>