<extension version="1.7" type="plugin" group="resources">
	<name>Resource - Usage</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Display usage information for a resource</description>
	<files>
		<filename plugin="usage">usage.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_resources_usage.ini</language>
	</languages>
	<config>
		<fields name="fields">
			<fieldset name="basic">
				<field name="period" type="text" size="5" default="14" label="PLG_RESOURCES_USAGE_TIME_PERIOD" description="PLG_RESOURCES_USAGE_TIME_PERIOD_DESC"/>
				<field name="pie_chart_path" type="text" size="25" default="/site/usage/pie_chart_resources/" label="PLG_RESOURCES_USAGE_CHART_PATH_LABEL" description="PLG_RESOURCES_USAGE_CHART_PATH_DESC"/>
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="defaultDataset" type="radio" default="cumulative" label="PLG_RESOURCES_USAGE_DEFAULT_LABEL" description="PLG_RESOURCES_USAGE_DEFAULT_DESC">
					<option value="cumulative">PLG_RESOURCES_USAGE_CUMULATIVE</option>
					<option value="yearly">PLG_RESOURCES_USAGE_YEARLY</option>
					<option value="monthly">PLG_RESOURCES_USAGE_MONTHLY</option>
				</field>
				<field name="mapZoom" type="text" size="5" default="2" label="PLG_RESOURCES_USAGE_MAP_ZOOM_LABEL" description="PLG_RESOURCES_USAGE_MAP_ZOOM_DESC"/>
				<field name="mapLng" type="text" size="5" default="20" label="PLG_RESOURCES_USAGE_MAP_LONGITUDE_LABEL" description="PLG_RESOURCES_USAGE_MAP_LONGITUDE_DESC"/>
				<field name="mapLat" type="text" size="5" default="0" label="PLG_RESOURCES_USAGE_MAP_LATITUDE_LABEL" description="PLG_RESOURCES_USAGE_MAP_LATITUDE_DESC"/>
				<field name="map_path" type="text" size="25" default="/site/stats/resource_maps/" label="PLG_RESOURCES_USAGE_MAP_PATH_LABEL" description="PLG_RESOURCES_USAGE_MAP_PATH_DESC"/>
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="chart_color_line" type="text" size="15" default="#656565" label="PLG_RESOURCES_USAGE_CHART_LINECOLOR_LABEL" description="PLG_RESOURCES_USAGE_CHART_LINECOLOR_DESC"/>
				<field name="chart_color_fill" type="text" size="15" default="rgba(0, 0, 0, 0.15)" label="PLG_RESOURCES_USAGE_CHART_FILLCOLOR_LABEL" description="PLG_RESOURCES_USAGE_CHART_FILLCOLOR_DESC"/>
				<field name="chart_color_selection" type="text" size="15" default="#656565" label="PLG_RESOURCES_USAGE_CHART_SELECTCOLOR_LABEL" description="PLG_RESOURCES_USAGE_CHART_SELECTCOLOR_DESC"/>
				<field name="pie_chart_color1" type="text" size="15" default="#7c7c7c" label="PLG_RESOURCES_USAGE_PIE1_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color2" type="text" size="15" default="#515151" label="PLG_RESOURCES_USAGE_PIE2_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color3" type="text" size="15" default="#d9d9d9" label="PLG_RESOURCES_USAGE_PIE3_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color4" type="text" size="15" default="#3d3d3d" label="PLG_RESOURCES_USAGE_PIE4_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color5" type="text" size="15" default="#797979" label="PLG_RESOURCES_USAGE_PIE5_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color6" type="text" size="15" default="#595959" label="PLG_RESOURCES_USAGE_PIE6_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color7" type="text" size="15" default="#e5e5e5" label="PLG_RESOURCES_USAGE_PIE7_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color8" type="text" size="15" default="#828282" label="PLG_RESOURCES_USAGE_PIE8_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color9" type="text" size="15" default="#404040" label="PLG_RESOURCES_USAGE_PIE9_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
				<field name="pie_chart_color10" type="text" size="15" default="#3a3a3a" label="PLG_RESOURCES_USAGE_PIE10_LABEL" description="PLG_RESOURCES_USAGE_PIE_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
