<install version="1.5" type="plugin" group="groups">
	<name>Groups - Members</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Display a group's members</description>
	<files>
		<filename plugin="members">members.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_groups_members.ini</language>
	</languages>
	<params>
		<param name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of members to display in one page"/>
		<param name="resort" type="radio" default="0" label="Sort alphabetically" description="Sort members alphabetically? Default is group join date.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>